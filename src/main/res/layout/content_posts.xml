<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.e621.rebane.activities.PostsActivity"
    tools:showIn="@layout/activity_posts"
    android:background="@color/colorPrimaryDark"
    android:padding="0dp">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_above="@+id/pagebar"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">
        <GridView
            android:id="@+id/lstPostResults"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:numColumns="1"
            android:verticalSpacing="2dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/pagebar"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bnFirst"
            android:clickable="true"
            android:src="@android:drawable/ic_media_previous"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bnLast"
            android:clickable="true"
            android:src="@android:drawable/ic_media_rew"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bnNext"
            android:clickable="true"
            android:src="@android:drawable/ic_media_ff"/>
    </LinearLayout>

</RelativeLayout>
